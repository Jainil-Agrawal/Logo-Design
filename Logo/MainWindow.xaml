<Window x:Class="Logo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        Title="Logo" Height="500" Width="800">
    <Grid>
        <StackPanel Width="150" Background="#EEE" HorizontalAlignment="Left">

            <TextBlock Text="Logos" FontWeight="Bold"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                <ListBox Name="LogoList"
                 SelectionChanged="LogoList_SelectionChanged"
                 SelectionMode="Multiple"/>
            </ScrollViewer>
            <Button Content="Add File" Click="Open_File"/>

            <TextBlock Text="Texts" FontWeight="Bold"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                <ListBox Name="TextBoxList"
                 SelectionChanged="TextBoxList_SelectionChanged"
                />
            </ScrollViewer>
            <Button Content="Add TextBox" Click="AddTextBoxBtn_Click" />
        </StackPanel>

        <Canvas Name="DesignCanvas" Background="White" Margin="150,0,0,0"/>
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Width="500" >
            <Button Height="25" Margin="5" Width="50" Content="Speed +" Click="SpeedUp_Click" />
            <TextBox Height="25" x:Name="speed" Margin="5" Width="40" TextChanged="Speed_TextChanged" />
            <Button Height="25" Margin="5" Width="50" Content="Speed -" Click="SpeedDown_Click" />

            <Button Height="25" Margin="5" Width="40" Content="Start" Click="StartRotate_Click" />
            <TextBox Height="25" x:Name="angle" Margin="5" Width="40" TextChanged="Angle_Changed" />
            <Button Height="25" Margin="5" Width="40" Content="Stop" Click="StopRotate_Click" />

            <TextBlock Height="25" Text="Left" Margin="5" Width="20" />
            <TextBox Height="25" x:Name="posX" Margin="5" Width="40" TextChanged="PosX_TextChanged"/>
            <TextBlock Height="25" Text="Top" Margin="5" Width="20" />
            <TextBox Height="25" x:Name="posY" Margin="5" Width="40" TextChanged="PosY_TextChanged"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Margin="40" VerticalAlignment="Top" HorizontalAlignment="Right" >
            <Button Height="25" Tag="+" Margin="5" Width="40" Content="+"  Click="Image_Size" />
            <TextBox Height="25" x:Name="img" Margin="5" Width="40" TextChanged="ImgSize_TextChanged"/>
            <Button Height="25" Tag="-" Margin="5" Width="40" Content="-" Click="Image_Size" />
            
            <Button Height="25" Tag="Front" Margin="5" Width="40" Content="Front" Click="Overlap_Click" />
            <Button Height="25" Tag="Back" Margin="5" Width="40" Content="Back" Click="Overlap_Click" />
            
            <Button Height="25" Tag="Hide" Margin="5" Width="40" Content="Hide" Click="HideShow_Click" />
            <Button Height="25" Tag="Show" Margin="5" Width="40" Content="Show" Click="HideShow_Click" />
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Margin="80" VerticalAlignment="Top" HorizontalAlignment="Right" >
            <Button Height="25" Margin="5" Width="70" Content="Hide/Show" Click="HideShowTxtbox_Click" />

            <Button Height="25" Tag="Hide" Margin="5" Width="70" Content="Hide All" Click="HideAllTxtbox_Click" />
            <Button Height="25" Tag="Show" Margin="5" Width="70" Content="Show All" Click="HideAllTxtbox_Click" />
        </StackPanel>
        
        <StackPanel Orientation="Vertical" Margin="20,0,0,70" VerticalAlignment="Bottom" HorizontalAlignment="Left" >
            <Button Height="25" Margin="5" Width="75" Content="Edit Label" Click="Edit_Label" />
            <Button Height="25" Margin="5" Width="100" Content="Collapse Label" Click="Collapse_Label" />
            <Button Height="25" Tag="collapse" Margin="5" Width="100" Content="Collapse All Label" Click="Collapse_AllLabel" />
            <Button Height="25" Tag="uncollapse"  Margin="5" Width="100" Content="Uncollapse All Label" Click="Collapse_AllLabel" />
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Margin="0,0,0,40" VerticalAlignment="Bottom" HorizontalAlignment="Left" >
            <Button Height="25" Tag="+" Margin="5" Width="50" Content="Width +"  Click="TextBox_Width" />
            <TextBox Height="25" x:Name="txtW" Margin="5" Width="25" TextChanged="TxtBoxWidth_TextChanged"/>
            <Button Height="25" Tag="-" Margin="5" Width="50" Content="Width -" Click="TextBox_Width" />
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" >
            <Button Height="25" Tag="+" Margin="5" Width="50" Content="Height +"  Click="TextBox_Height" />
            <TextBox Height="25" x:Name="txt" Margin="5" Width="25" TextChanged="TxtBoxHeight_TextChanged"/>
            <Button Height="25" Tag="-" Margin="5" Width="50" Content="Height -" Click="TextBox_Height" />
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" >
            <Button Height="25" Tag="Red" Margin="5" Width="75"  Content="Red" Click="Color_Click"  />
            <Button Height="25" Tag="Green" Margin="5" Width="75" Content="Green" Click="Color_Click"  />
            <Button Height="25" Tag="Blue" Margin="5" Width="75" Content="Blue"  Click="Color_Click" />
            <Button Height="25" Tag="Reset" Margin="5" Width="75" Content="Reset" Click="Color_Click" />
            <Button Height="25" Tag="Delete" Margin="5" Width="75" Content="Delete" Click="Button_Delete" />
            <Button Content="Save" Width="75" Height="25" Margin="5" Click="SaveButton_Click" />
            <Button Height="25" Tag="Delete" Margin="5" Width="100" Content="Delete TextBox" Click="Button_DeleteTextBox" />
        </StackPanel>
    </Grid>
</Window>
